<body class="mt-5">
     <div class="container mx-auto">
        <h1 class="text-center" >Blog Center</h1>
        <form action="/blog" method="POST" class="mt-0">
            <input class="form-control form-control-lg" type="text" name="task" placeholder="Add Blog ..." required>
            <button type="submit" class="btn btn-primary btn-lg mt-1 mb-5 btn-block">Add Blog</button>
        </form>
        <form action="/blog" method="SEARCH" class="mt-0">
            <input type="text" id="mySearch" onkeyup= search() placeholder="Search.." title="Type in a category">
            <button type="submit" class="btn btn-primary btn-lg mt-1 mb-5 btn-block">Search Blog</button>
        </form>
        <h4>Blogs</h4>
        <ul id="blogMenu" class="list-group list-group-flush mt-5 text-light scrollingDiv">
            <% for ( let i=0; i < taskToDo.length;  i++ ){%>
               <a href="/views/mblog.ejs"></a>
                <li class="list-group-item" id="<%= i %>" ><%= taskToDo[i].taskItem %></li>
            <% } %>
            
        </ul>
    </div>
